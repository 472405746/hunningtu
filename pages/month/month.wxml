<import src="../common/header.wxml" />
<view class="body">
  <view class="section" style="margin:20rpx;padding:20rpx">
    <picker class="query-form"  mode="date" fields="month" start="2016-09" bindchange="bindDateChange">
      <view class="picker">
        月份: {{date}}
      </view>
    </picker>
  </view>
  <view class="table section">
    <view class="tr bg-w ">
      <view class="th" wx:for="{{companys}}">
        {{companys[index]}}
      </view>
    </view>
    <block wx:for="{{data}}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td" wx:for-index="idx" wx:for="{{data[index]}}">
          {{data[index][idx]}}
        </view>
      </view>
      <view class="tr" wx:else>
        <view class="td" wx:for-index="idx" wx:for="{{data[index]}}">
          {{data[index][idx]}}
        </view>
      </view>
    </block>
  </view>
</view>